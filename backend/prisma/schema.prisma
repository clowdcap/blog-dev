// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  titulo    String   @unique
  descricao String
  conteudo  String
  capa      String
  autor     String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  name      String   @default("Nome")
  sobrenome String   @default("Sobrenome")
  email     String   @unique
  telefone  String   @default("Telefone")
  passwords String
  avatar    String   @default("Image")
  descricao String   @default("Texto")
  createdAt DateTime @default(now())
}

model Newsletter {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Contact {
  id        String @id @default(cuid())
  name      String @default("Nome")
  email     String @unique
  descricao String
}
